<form method="post" action="/signup">
            <div class="form-group">
              <label class="col-md-4">Email-Id</label>
              <input type="email" class="form-control" name="email"/>
            </div>
            <div class="form-group">
              <label class="col-md-4">Password</label>
              <input type="password" class="form-control" name="password"/>
              </div>
              <div class="form-group">
                <label class="col-md-4">Full Name</label>
                <input type="text" class="form-control" name="fullName"/>
                </div>
                <div class="form-group">
                  <label class="col-md-4">Programme</label>
                  <input list="programme" type="text" class="form-control" name="programme"/>
                  <datalist id="programme">
                    <option value="BE"/>
                    <option value="Mtech"/>
                    <option value="IMSC"/>
                    <option value="BCA"/>
                    <option value="HM"/>
                    <option value="MBA"/>
                    <option value="MCA"/>
                  </datalist>
                  </div>
                  <div class="form-group">
                    <label class="col-md-4">Branch</label>
                    <input list="branch" type="text" class="form-control" name="branch"/>
                    <datalist id="branch">
                      <option value="ECE"/>
                      <option value="CSE"/>
                      <option value="IT"/>
                      <option value="EEE"/>
                      <option value="Mech"/>
                      <option value="Prod"/>
                      <option value="Chem"/>
                      <option value="Biotech"/>
                      <option value="Polymer"/>
                      <option value="Pharma"/>
                    </datalist>
                    </div>
                    <div class="form-group">
                      <label class="col-md-4">Year</label>
                      <input list="year" type="text" class="form-control" name="year"/>
                      <datalist id="year">
                        <option value="1"/>
                        <option value="2"/>
                        <option value="3"/>
                        <option value="4"/>
                        <option value="5"/>
                      </datalist>
                      </div>
                      <div class="form-group">
                        <label class="col-md-4">Roll No in the format : programme/rollno/year(for ex: BE/10239/17)</label>
                        <input type="text" class="form-control" name="roll">
                        </div>
                        <div class="form-group">
                          <label class="col-md-4">Phone-Number</label>
                          <input type="text" class="form-control" name="phone"/>
                        </div>
                        <div class="form-group">
                          <label class="col-md-4">Hostel Number</label>
                          <input list="hostel" type="text" class="form-control" name="hostel"/>
                          <datalist id="hostel">
                            <option value="1"/>
                            <option value="2"/>
                            <option value="3"/>
                            <option value="4"/>
                            <option value="5"/>
                            <option value="6"/>
                            <option value="7"/>
                            <option value="8"/>
                            <option value="9"/>
                            <option value="10"/>
                            <option value="11"/>
                            <option value="12"/>
                            <option value="13"/>
                          </datalist>
                        </div>
                        <div class="form-group">
                          <label class="col-md-4">Room Number</label>
                          <input type="text" class="form-control" name="room"/>
                        </div>
                        <div class="form-group">
                          <button type="submit" class="btn btn-primary">Register</button>
                        </div>
                 </form>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
